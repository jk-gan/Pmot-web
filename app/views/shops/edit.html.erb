<section id="main-content-review">
<div class="form-panel">

  <% flash.each do |key, value| %>
     <div class="flash <%= key %>"><%= value %></div>
  <% end %>
<%= form_for @shop do |f| %>
  <%#= devise_error_messages! %>
  <% if @shop.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <ul>
        <% @shop.errors.full_messages.each do |msg| %>
          <div class="error-message">
            <li><%= msg %></li>
          </div>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
    <div class="row">
      <%= f.label :name, class: 'col-sm-2 col-sm-2 control-label' %>
      <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control round-form", placeholder: "Shop Name" %>
    </div>
  </div>
</div>

<div class="form-group">
<div class="row">
      <%= f.label :description, class: 'col-sm-2 col-sm-2 control-label' %>
      <div class="col-sm-5">
      <%= f.text_area :description, placeholder: "Description", class: "form-control round-form", size: "40x5" %>
    </div>
  </div>
</div>

<div class="form-group">
<div class="row">
      <%= f.label :phone, class: 'col-sm-2 col-sm-2 control-label' %>
      <div class="col-sm-5">
      <%= f.text_field :phone, placeholder: "Phone", class: "form-control round-form" %>
    </div>
  </div>
</div>

<div class="form-group">
<div class="row">
      <%= f.label :address, class: 'col-sm-2 col-sm-2 control-label' %>
      <div class="col-sm-5">
      <%= f.text_area :address, placeholder: "Shop Address", id: 'address', class: "form-control round-form", size: "40x5" %>
    </div>
  </div>
</div>

<div class="form-group">
<div class="row">
  <div class="col-sm-2 col-sm-offset-2">
    <input type="button" id="check-location" value="Check Location" class= "btn btn-default">
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-7 col-sm-offset-2">
    <div id="map"></div>
  </div>
  </div>
  </div>

  <div class="form-group">
  <div class="row">
      <%= f.label :image, class: 'col-sm-2 col-sm-2 control-label' %>
      <div class="col-sm-5">
      <%= f.file_field :image, class: "form-control" %>
      <%= f.hidden_field :image_cache %>
    </div>
  </div>
    </div>

  <div class="actions">
    <%= f.submit "Register", class: "btn btn-default" %>
  </div>
<% end %>
</div>
</section>
