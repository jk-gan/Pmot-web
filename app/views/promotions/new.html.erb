<h1>Promotions#new</h1>
<p>Find me in app/views/promotions/new.html.erb</p>

<%= form_for @promotion do |f| %>
  <%= f.label :name %>
  <%= f.text_area :name %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>
  <%= f.label :term_and_condition %>
  <%= f.text_area :term_and_condition %>
  <br/>
  <%= f.label :starts_at %>
  <%= date_select :promotion, :starts_at %>
  <br/>
  <%= f.label :expires_at %>
  <%= date_select :promotion, :expires_at %>
  <br/>
  <%= f.submit 'Create' %>
<% end %>
