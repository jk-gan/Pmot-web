<div id="textbox">
  <div class="toplam">

    <div class="left">
            <div id="ic">
      <h2>Sign Up</h2>
      <p>Do you want to get customer easier and serve your customer better? Sign up to Pmot now.</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :post, html: {id: "girisyap"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :name, class:'control-label' %><br />
          <%= f.text_field :name, class: "bp-suggestions form-control", size: "50x10" %>
        </div>

        <div class="form-group">
          <%= f.label :email, class:'control-label' %><br />
          <%= f.email_field :email, class: "bp-suggestions form-control", size: "50x10"%>
        </div>

        <div class="form-group">
          <%= f.label :password, class:'control-label' %>
          <!-- <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br /> -->
          <%= f.password_field :password, autocomplete: "off", class: "bp-suggestions form-control", size: "50x10" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class:'control-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "bp-suggestions form-control", size: "50x10" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "girisbtn" %>
        </div>
      <% end %>
        <button id="moveright">Login</button>
    </div>
    </div>

    <div class="right">
    <div id="ic">
      <h2>Login</h2>
      <p>Prepare to get your business to a whole new level with Pmot.</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "girisyap", name: "login-form"}) do |f| %>
        <div class="form-group">
          <%= f.label :email, class:'control-label' %><br />
          <%= f.email_field :email, autofocus: true, class: "bp-suggestions form-control", size: "50x10" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class:'control-label' %><br />
          <%= f.password_field :password, autocomplete: "off", class: "bp-suggestions form-control", size: "50x10" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "girisbtn", tabindex: "100" %>
        </div>
      <% end %>

      <button id="moveleft">Sign Up</button>
            </div>
    </div>

  </div>
</div>
